{
  "name": "recipe-flow",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun --bun next dev --webpack",
    "build": "bun run build:mcp && bun --bun next build",
    "build:mcp": "vite build --config vite.mcp.config.ts && bun run scripts/bundle-mcp-html.ts",
    "start": "bun --bun next start",
    "lint": "bun biome check . && bun eslint .",
    "lint:fix": "bun biome check --write . && bun eslint . --fix",
    "format": "bun biome check --write .",
    "typecheck": "bun tsc --noEmit",
    "check": "bun run lint && bun run typecheck",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@ai-sdk/openai-compatible": "^2.0.13",
    "@anthropic-ai/claude-code": "^2.0.76",
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "ai": "^6.0.6",
    "ai-sdk-provider-claude-code": "^3.1.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/bun": "^1.3.5",
    "@types/jsdom": "^27.0.0",
    "@types/jszip": "^3.4.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "canvas": "^3.2.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
